---
Attribute:
  enabled: false
DuplicateMethodCall:
  max_calls: 2
IrresponsibleModule:
  enabled: false
NestedIterators:
  max_allowed_nesting: 2
NilCheck:
  enabled: false
PrimaDonnaMethod:
  enabled: false
TooManyStatements:
  max_statements: 30
UnusedParameters:
  enabled: false
UtilityFunction:
  public_methods_only: true

"app/controllers":
  NestedIterators:
    enabled: false

"app/helpers":
  UtilityFunction:
    enabled: false

exclude_paths:
  - vendor
  - db
  - bin
  - spec
