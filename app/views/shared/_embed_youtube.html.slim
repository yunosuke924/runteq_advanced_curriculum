ruby:
  embed = local_assigns[:embed]
  width = local_assigns[:width] || 853
  height = local_assigns[:height] || 480
  short_url = embed.identifier
  array = short_url.split("/")
  id = array[3]

.embed-youtube
  = content_tag 'iframe', nil, width: width, height: height, src: "https://www.youtube.com/embed/#{id}", \
    frameborder: 0, gesture: 'media', allow: 'encrypted-media', allowfullscreen: true
